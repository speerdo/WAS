---
// No imports needed for this approach
---

<div class="logo-carousel-container bg-slate-900/50 py-8 md:py-12 mt-2">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <!-- Logo slides -->
      <div class="swiper-slide"><img src="/logos/zapier.svg" alt="Zapier" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/make.svg" alt="Make.com" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/n8n.svg" alt="n8n" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/monday.svg" alt="Monday" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/clickup.svg" alt="ClickUp" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/openai.svg" alt="OpenAI" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/miro.svg" alt="Miro" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/airtable.svg" alt="Airtable" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/asana.svg" alt="Asana" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/wrike.svg" alt="Wrike" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/notion.svg" alt="Notion" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/teams.svg" alt="Teams" class="h-10 md:h-16 mx-auto" /></div>
      <div class="swiper-slide"><img src="/logos/slack.svg" alt="Slack" class="h-10 md:h-16 mx-auto" /></div>
    </div>
  </div>
</div>

<script>
  // Import Swiper and required modules
  import Swiper from 'swiper';
  import { Autoplay } from 'swiper/modules';
  
  // Import Swiper styles
  import 'swiper/css';
  
  // Initialize Swiper
  document.addEventListener('DOMContentLoaded', () => {
    const swiper = new Swiper('.swiper-container', {
      modules: [Autoplay],
      slidesPerView: 2.5,
      spaceBetween: 30,
      loop: true,
      speed: 5000, // Very slow transition for smooth scrolling
      autoplay: {
        delay: 0, // No delay between transitions
        disableOnInteraction: false,
      },
      allowTouchMove: true, // Allow manual swiping
      breakpoints: {
        640: {
          slidesPerView: 4,
          spaceBetween: 40
        },
        768: {
          slidesPerView: 5,
          spaceBetween: 50
        },
        1024: {
          slidesPerView: 6,
          spaceBetween: 60
        }
      }
    });
    
    // Pause on hover
    const swiperContainer = document.querySelector('.swiper-container');
    if (swiperContainer) {
      swiperContainer.addEventListener('mouseenter', () => {
        swiper.autoplay.stop();
      });
      swiperContainer.addEventListener('mouseleave', () => {
        swiper.autoplay.start();
      });
    }
  });
</script>

<style>
  .logo-carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  
  .swiper-container {
    width: 100%;
    padding: 0 1rem;
  }
  
  .swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.7;
    transition: opacity 0.3s;
  }
  
  .swiper-slide:hover {
    opacity: 1;
  }
  
  /* Add gradient fade effect on edges */
  .logo-carousel-container::before,
  .logo-carousel-container::after {
    content: "";
    position: absolute;
    top: 0;
    height: 100%;
    width: 5rem;
    z-index: 2;
    pointer-events: none;
  }
  
  .logo-carousel-container::before {
    left: 0;
    background: linear-gradient(to right, rgb(15 23 42 / 0.5), transparent);
  }
  
  .logo-carousel-container::after {
    right: 0;
    background: linear-gradient(to left, rgb(15 23 42 / 0.5), transparent);
  }
  
  @media (max-width: 768px) {
    .logo-carousel-container::before,
    .logo-carousel-container::after {
      width: 3rem;
    }
  }
</style>
