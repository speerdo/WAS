---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const seoTitle = "About Us | Workflow Automation Strategies - Transforming Business Through Technology";
const seoDescription = "Learn about our founder's journey from fullstack development to workflow automation expertise. Discover how technical skills meet business efficiency solutions.";
